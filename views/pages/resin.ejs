<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <title>DB Resine</title>
  </head>
  <body>
    <div class="container mb-5">
      <nav class="sticky-top bg-white pb-3 mb-1" id="TitleNav">
        <div class="row mt-4 align-items-center clearfix">
          <div class="col-9">
            <h1 class="display-2 d-inline align-middle">Resine</h1>
          </div>
          <div class="col text-center">
            <div class="row gx-2">
              <div class="col-xl-4 mb-1">
                <button class="btn btn-outline-primary w-100" type="button" onclick="addResinToDb()" title="Aggiungi una riga per inserire altre resine">Aggiungi</button>
              </div>
              <div class="col-xl-4 mb-1">
                <a href="/" class="btn btn-outline-danger w-100" type="button" title="Annulla i cambiamenti e torna indietro">Annulla</a>
              </div>
              <div class="col-xl-4 mb-1">
                <button class="btn btn-outline-success w-100" type="button" onclick="resindbUpdate()" title="Salva i cambiamenti">Salva</button>
              </div>
            </div>
          </div>

          <hr>
        </div>
      </nav>
      <div class="container">
        <form id="resindbform" docid="<%= resina.id %>" docrev="<%= resina.value.rev %>">
        <% if (resina.value.resin != []) { %>
          <% var i = 0 %>
          <% resina.value.resin.forEach(function(resin){ %>
            <% i++ %>
            <div class="row pb-2">
              <div class="col-10">
                <input type="text" class="form-control" id="resin<%= i %>" name="Resina<%= i %>" value="<%= resin.name %>">
              </div>
              <div class="col-2">
                <button type="button" class="btn-close" aria-label="Delete" title="Elimina tipologia di resina"></button>
              </div>
            </div>

          <% }); %>
        <% } %>
          <button type="submit" class="d-none" aria-hidden="true" onsubmit="resindbUpdate()"></button> <!--questo è qua solo per la cosa dell'invio, in caso basta metterlo come disabled e invio non va più -->
        </form>
      </div>
    </div>

    <!-- SCRIPT -->
    <script type="text/javascript">
      $(document).ready(function() {
        $("body").on("click", ".btn-close", function() {
          $( this ).parent().parent().fadeOut(50);
          $( this ).parent().siblings().find("*").val('');
        })
      });

      $(document).ready(function() {
        $(window).keydown(function(event){
          if(event.keyCode == 13) {
            event.preventDefault();
            resindbUpdate();
          }
        });
      });

      function addResinToDb() {
        const appended = $('<div class="row pb-2"><div class="col-10"><input type="text" class="form-control" name="added" rev="" value=""></div><div class="col-2"><button type="button" class="btn-close" aria-label="Delete" title="Elimina tipologia di resina"></button></div></div>');
        $('#resindbform').prepend(appended);
        $('#resindbform input').first().focus();
      };
    </script>
    <script src="resindbscript.js" type="text/javascript" crossorigin="anonymous"></script>
    <script src="script.js" type="text/javascript" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
  </body>
</html>
