<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <title>Modifica Cliente</title>
</head>
<body>
  <!--Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <div class="container mt-3">
      <a href="infoCliente?c=<%= customer.id %>" class="btn btn-outline-danger" title="Annulla cambiamenti e torna indietro">Indietro</a>

      <h1 class="display-3 ms-4 d-inline align-middle" id="customerName"><%= customer.value.name %></h1>
      <p id="customerId" hidden><%= customer.id%></p>
      <p id="customerRev" hidden><%= customer.value.rev%></p>
      <button type="button" name="button" class="btn btn-outline-success float-end mt-3" onclick="formUpdate()" title="Salva i cambiamenti">Salva</button>
      <a href="infoCliente?c=<%= customer.id %>" class="btn btn-outline-danger float-end mt-3 me-3" title="Annulla cambiamenti e torna indietro">Annulla</a>
      <hr>
  </div>
  <div class="container mt-4">
    <div class="row">
      <form class="col" id="mainForm">
        <h3>Info Cliente</h3>
          <div class="form-floating mb-2">
            <input type="email" class="form-control" id="Email" name="Email" placeholder="email@esempio.com" value="<%= customer.value.email %>">
            <label for="Email">Email</label>
          </div>
          <div class="form-floating mb-2">
            <input type="tel" class="form-control" id="Telefono" name="Telefono" placeholder="" value="<%= customer.value.telefono %>">
            <label for="Telefono">Numero di Telefono</label>
          </div>
          <div class="form-floating mb-2">
            <input type="number" class="form-control" id="Token" name="Token" placeholder="" value="<%= customer.value.token %>">
            <label for="Token">Token</label>
          </div>
      </form>
      <div class="col">
        <form id="resinForm">
          <h3>Resine Vendute</h3>
          <% if (customer.value.resine) { %>
            <% var i = 0 %>
            <% customer.value.resine.forEach(function(resin){%>
              <% i++ %>
              <div class="row mb-2 Resine" id="div<%= i %>">
                <div class="col-7">
                  <input type="text" class="form-control" id="Resina<%= i %>" name="Resina<%= i %>" placeholder="" value="<%= resin.nome %>">
                </div>
                <div class="col-3">
                  <input type="number" class="form-control" id="Resina<%= i %>" name="Resina<%= i %>num" placeholder="" value="<%= resin.numero %>">
                </div>
                <div class="col-2">
                  <button type="button" class="btn-close" aria-label="Delete" title="Elimina tipologia di resina"></button>
                </div>
              </div>

              <% }); %>
            <% } %>
        </form>
        <button type="button" class="btn btn-outline-primary btn-sm align-text-top" name="addresin" onclick="addResin()" title="Aggiungi una tipologia di resina">Aggiungi Resina</button>
      </div>


      <div class="col">
        <h3>Macchine</h3>
        <% if (customer.value.macchine) { %>
          <div class="accordion" id="accordionExample">
          <% var i = 0;%>
          <% var open = 'true';%>
          <% var collapse = '';%>
          <% var show = 'show'; %>
          <% customer.value.macchine.forEach(function(device){ %>
            <% i++;%>
            <div class="accordion-item">
              <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button <%= collapse %>" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= i %>" aria-expanded="<% open %>" aria-controls="collapse<%= i %>">
                  <%= device.modello %> | <%= device.seriale %>
                </button>
              </h2>
              <div id="collapse<%= i %>" class="accordion-collapse collapse <%= show %>" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                  <strong>Informazioni</strong>
                </div>
              </div>
            </div>
            <% open = 'false'; %>
            <% collapse = 'collapsed'; %>
            <% show = '' %>
          <% }); %>
          </div>
        <% } %>
      </div>
    <div class="row mt-3">
      <div class="col-4">
        <form id="softwareForm">
          <h3>Software</h3>
          <% if (customer.value.software) { %>
            <% var i = 0 %>
            <% customer.value.software.forEach(function(software){%>
              <% i++ %>
              <div class="row mb-2" id="div<%= i %>">
                <div class="col-10">
                  <input type="text" class="form-control" id="Software<%= i %>" name="Software<%= i %>" placeholder="" value="<%= software.nome %>">
                </div>
                <div class="col-2">
                  <button type="button" class="btn-close" aria-label="Delete" title="Elimina software"></button>
                </div>
              </div>
              <% }); %>
            <% } %>
        </form>
        <button type="button" class="btn btn-outline-primary btn-sm align-text-top" name="addsoftware" onclick="addSoftware()" title="Aggiungi un software">Aggiungi Software</button>
      </div>
      <div class="col-8">
        <h3>Assistenze</h3>
        <div class="form-floating">
          <textarea id="assistenzeArea" class="form-control mt-3" placeholder="" style="height: 250px" ><%= customer.value.assistenze %></textarea>
          <label for="assistenzeArea">Cronologia Assistenze</label>
        </div>
      </div>
      </div>
    </div>
  </div>
  <script src="script.js" type="text/javascript" crossorigin="anonymous"></script>
  <script type="text/javascript">
    $(document).ready(function() {
      $("body").on("click", ".btn-close", function() {
        $( this ).parent().parent().fadeOut("fast");
        $( this ).parent().siblings().children().val('');
      })
    });
  </script>

</body>
</html>
